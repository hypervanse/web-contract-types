{
  "name": "web-contract-types",
  "version": "1.0.9",
  "description": "Contract types for common web application languages: HTML, JS, CSS, URL",
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "dependencies": {
    "node-sec-patterns": "^3.0.0",
    "template-tag-common": "^5.0.0"
  },
  "scripts": {
    "cover": "istanbul cover _mocha",
    "coveralls": "npm run cover -- --report lcovonly && cat ./coverage/lcov.info | coveralls",
    "integrationtest": "scripts/run-integration-tests.sh",
    "lint": "./node_modules/.bin/eslint .",
    "prepack": "npm run lint && npm test && ./scripts/make-md-toc.pl README.md",
    "test": "mocha"
  },
  "pre-commit": [
    "integrationtest"
  ],
  "mintable": {
    "selfNominate": [
      "web-contract-types/TrustedHTML",
      "web-contract-types/TrustedResourceURL",
      "web-contract-types/TrustedScript",
      "web-contract-types/TrustedURL"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikesamuel/web-contract-types.git"
  },
  "keywords": [
    "security",
    "XSS",
    "sec-roadmap",
    "typed-string"
  ],
  "author": "@mikesamuel",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mikesamuel/web-contract-types/issues"
  },
  "homepage": "https://github.com/mikesamuel/web-contract-types#readme",
  "devDependencies": {
    "chai": "^4.1.2",
    "coveralls": "^3.0.1",
    "eslint": "^5.6.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-strict": "^14.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^4.0.1",
    "mocha-lcov-reporter": "^1.3.0",
    "pre-commit": "^1.2.2"
  },
  "eslintIgnore": [
    "/coverage/**"
  ],
  "eslintConfig": {
    "extends": [
      "strict"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "source",
      "ecmaFeatures": {
        "impliedStrict": false
      }
    },
    "rules": {
      "no-confusing-arrow": [
        "error",
        {
          "allowParens": true
        }
      ],
      "no-warning-comments": [
        "error",
        {
          "terms": [
            "do not submit"
          ]
        }
      ],
      "no-void": "off",
      "strict": [
        "error",
        "global"
      ]
    }
  }
}
